extends ../layouts/main

block content
    div.header
        h1 Новости друзей пользователя: "#{user.fullName}"
    if newsData.length > 0
        table
            thead
                tr
                    th Пользователь
                    th Содержание
                    th Дата
            tbody
                each news in newsData
                    tr
                        td= news.fullName
                        td= news.content
                        td= news.date
    else
        p У друзей этого пользователя нет новостей.
