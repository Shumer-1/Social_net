extends ../layouts/main

block content
    div.header
        h1 Друзья пользователя: "#{user.fullName}"
    if friends.length > 0
        table
            thead
                tr
                    th ФИО
                    th Дата рождения
                    th Email
                    th Фотография
                    th Роль
                    th Статус
            tbody
                each friend in friends
                    tr
                        td= friend.fullName
                        td= friend.birthDate
                        td= friend.email
                        td
                            if friend.photo
                                img(src=friend.photo, alt=friend.fullName, width="50")
                            else
                                | -
                        td= friend.role
                        td= friend.status
    else
        p У этого пользователя нет друзей.
