extends ../layouts/main

block content
    div.header
        h1 Редактировать пользователя
    div.edit-container
        form.edit-user-form(method="POST", action=`/admin/users/${user.id}?_method=PUT`, enctype="multipart/form-data")
            div.form-div
                label(for="fullName") ФИО:
                input#fullName(type="text", name="fullName", value=user.fullName, required)
            div.form-div
                label(for="birthDate") Дата рождения:
                input#birthDate(type="date", name="birthDate", value=user.birthDate, required)
            div.form-div
                label(for="email") Email:
                input#email(type="email", name="email", value=user.email, required)
            div.form-div
                label(for="role") Роль:
                select#role(name="role")
                    option(value="user", selected=user.role === 'user') Пользователь
                    option(value="admin", selected=user.role === 'admin') Администратор
            div.form-div
                label(for="status") Статус:
                select#status(name="status")
                    option(value="unconfirmed", selected=user.status === 'unconfirmed') Не подтверждённый
                    option(value="active", selected=user.status === 'active') Активный
                    option(value="blocked", selected=user.status === 'blocked') Заблокированный
            div.form-div
                div.photo-container
                    label(for="photo") Фотография:
                    if user.photo
                        img(src=user.photo, alt=user.fullName, width="100")
                input#photo(type="file", name="photo", accept="image/*")
            div.form-div.buttons
                button(type="submit") Сохранить
                a(href="/admin/users") Отмена
