doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport" content="width=device-width, initial-scale=1.0")
        title #{title}
        link(rel="icon", href="/favicon.ico")
        link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css")
        link(href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet")
        link(rel="stylesheet" href="/css/styles.css")
    body(class="full-page-background")
        .container
            h1(style="color:white")= title
            .container-form
                form(action="/api/addUser" method="POST" enctype="multipart/form-data" class="bg-light p-4 rounded")
                    .form-group
                        label(for="name") ФИО
                        input#name.form-control(type="text" name="name" placeholder="Введите ФИО" required)
                    .form-group
                        label(for="dob") Дата рождения
                        input#dob.form-control(type="date" name="dob" required)
                    .form-group
                        label(for="email") Email
                        input#email.form-control(type="email" name="email" placeholder="Введите email" required)
                    .form-group
                        label(for="role") Роль
                        select#role.form-control(name="role" required)
                            option(value="пользователь") Пользователь
                            option(value="администратор") Администратор
                    .form-group
                        label(for="status") Статус
                        select#status.form-control(name="status" required)
                            option(value="активный") Активен
                            option(value="неактивный") Неактивен
                    .form-group
                        label(for="photo") Фото
                        input#photo.form-control(type="file" name="photo" accept="image/*")
                    button.btn.btn-primary.btn-block(type="submit") Добавить пользователя
            a(href="/" class="btn btn-secondary mt-3") Назад к списку пользователей
        script(src="https://code.jquery.com/jquery-3.5.1.min.js")
        script(src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js")
        script(src="/addUser.js")
